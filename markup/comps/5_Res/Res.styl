.resources
  margin-top: 50px
  h1
    margin-left: 20px
    +mq-size(tablet)
      margin-left: 0

.resources__list
  list-style: none
  margin: 50px 0 0
  padding: 0
  display: flex
  flex-flow: row wrap

.list__item
  margin: 0 20px 25px
  border: 2px solid $blue-color
  flex-grow: 1
  // &:nth-child(3n-1)
  //   margin-right: 0
  &:hover
    background-color: $acent-color
    border-color: $acent-color
    > .list__link
      color: #fff
  +mq-size(desktop)
    margin-left: 0
    &:nth-child(3n-1)
      margin-right: 0

.list__link
  font-size: 16px
  display: block
  padding: 15px 20px
  text-decoration: none
  color: $blue-color
  font-family: "SegoeUISemiBold", Arial, sans-serif
  +mq-size(tablet)
    font-size: 18px
